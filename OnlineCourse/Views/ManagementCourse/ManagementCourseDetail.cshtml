@model OnlineCourse.Models.ProductModel


@{
    ViewBag.Title = "Thông tin khóa học";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";

    List<Model.Models.CourseDocument> ListDocument = (List<Model.Models.CourseDocument>)ViewBag.ListDocument;
    List<Model.Models.CourseVideo> ListVideo = (List<Model.Models.CourseVideo>)ViewBag.ListVideo;
}

<div id="PlaceHolderHere"></div>

<h2><span>@Model.Name</span></h2>


@Html.ActionLink("Sửa mô tả khóa học", // <-- Link text
                                                                    "ViewEditCourse", // <-- Action Method Name
                                                                    "ManagementCourse",
                                                                        new { productId = Model.ID },
                                                                        new { @class = "btn btn-primary waves-effect waves-light" }// <-- Route value
                                                                    )

<hr />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <table style="width:100%;">
                    <tr>
                        <td>
                            <h3 class="card-title">Danh sách video</h3>
                        </td>
                        <td style="text-align:right;">
                            @Html.ActionLink("Thêm video", // <-- Link text
                                                                    "ViewAddVieoToCourse", // <-- Action Method Name
                                                                    "ManagementCourse",
                                                                        new { productId = Model.ID },
                                                                        new { @class = "btn btn-primary waves-effect waves-light" }// <-- Route value
                                                                    )
                        </td>
                    </tr>
                </table>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-12">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tiêu đề</th>
                                    <th>Ngày tải lên</th>
                                    <th>Video</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ListVideo)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td>@item.DateUpdate</td>
                                        <td>@item.Name</td>
                                        <td style="width:10px;">
                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#update" id="@item.ID"
                                                    data-url="@Url.Action($"UpdateUser/{item.ID}", "User")">
                                                Sửa
                                            </button>
                                        </td>

                                        <td style="text-align:center;width:15px;vertical-align:middle;">
                                            @Html.ActionLink("Xóa", // <-- Link text
                                                                    "DeleteVideoOfCourse", // <-- Action Method Name
                                                                    "ManagementCourse",
                                                                        new { documentId = item.ID, productId = Model.ID },
                                                                        new { @class = "btn btn-secondary" }// <-- Route value
                                                                    )
                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="card">
            <div class="card-header">
                <table style="width:100%;">
                    <tr>
                        <td>
                            <h3 class="card-title">Danh sách file</h3>
                        </td>
                        <td style="text-align:right;">
                            @Html.ActionLink("Thêm tài liệu", // <-- Link text
                                                                    "ViewAddDocumentToCourse", // <-- Action Method Name
                                                                    "ManagementCourse",
                                                                        new { productId = Model.ID },
                                                                        new { @class = "btn btn-primary waves-effect waves-light" }// <-- Route value
                                                                    )
                        </td>
                    </tr>
                </table>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-12">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tiêu đề</th>
                                    <th>Ngày tải lên</th>
                                    <th>File</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ListDocument)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td>@item.DateUpdate</td>
                                        <td>@item.Name</td>
                                        <td style="width:10px;">
                                            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#update" id="@item.ID"
                                                    data-url="@Url.Action($"UpdateUser/{item.ID}", "User")">
                                                Sửa
                                            </button>
                                        </td>

                                        <td style="text-align:center;width:15px;vertical-align:middle;">

                                            @Html.ActionLink("Xóa", // <-- Link text
                                                                    "DeleteDocumentOfCourse", // <-- Action Method Name
                                                                    "ManagementCourse",
                                                                        new { documentId = item.ID, productId = Model.ID },
                                                                        new { @class = "btn btn-secondary" }// <-- Route value
                                                                    )
                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />


