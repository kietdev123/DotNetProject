@model Model.Models.User

<div class="modal fade" id="confirmDelete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="confirmDeleteLable">Bạn có chắc muốn xóa?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="User/Delete">
                    <div class="form-group">
                        <input name="ID" value="@Model.ID" hidden="hidden"/>
                        <label asp-for="ID">@Model.ID</label>
                    </div>
                    <div class="form-group">
                        <input name="UserName" value="@Model.UserName" hidden="hidden" />
                        <label asp-for="UserName">@Model.UserName</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">@Model.Name</label>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-save="modal_delete">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>